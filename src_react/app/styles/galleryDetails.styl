@import "constants"

.gallery-details
	padding: 0px

  .details-close-btn
		position: absolute
		top: 8px
		right: 8px
		padding: 0
		background: transparent
		outline: none
		cursor: pointer

		& img
			width: 20px
			height: 20px

  & .ingredient-row
		height: 22px

		& .ingredient-img
			display: inline-block
			width: 17px
			height: 10px
			margin-right: 8px
			background: url('/assets/icon_fish.png')
			background-size: cover
			background-position: center

		& span
			font-size: 12px

.gallery-details-btn
	position: absolute
	bottom: 6px
	left: 50%
	transform: translateX(-50%)
	height: 30px
	padding: 0 20px
	border-radius: 30px
	background-color: white
	opacity: 0.5
	cursor: pointer
	transition: 0.1s linear opacity

	& img
		height: 100%

	&:hover
		opacity: 0.8

.details-container
	width: 160px
	padding: 12px 24px
	border-radius: 6px
	box-shadow: #fafafa 0px 0px 1px 1px
	background-color: colorWhite
	opacity: 0.0
	visibility: hidden
	transition: 0.15s linear all

	&.show
		opacity: 0.9
		visibility: visible
		transform: translate(-50%, 0%)

	& h4
		margin: 0 0 16px 0
