@import "constants"

loaderSize = 12px

#gallery-tile-view
	position: relative
	width: containerWidthPct
	max-width: containerWidthPx
	margin: 16px auto
	opacity: 0
	visibility: hidden
	transition: opacity 0.1s linear, visibility 0.1s linear
	
	&.show
		opacity: 1
		visibility: visible
	
	& .column
		display: inline-block
		vertical-align: top

.gallery-tile
	position: relative
	width: 100%
	margin-bottom: 12px
	opacity: 1.0
	transition: 0.1s linear opacity

	&:hover
		cursor: pointer
		opacity: 0.9

	& img
		width: 100%
		vertical-align: middle;

@keyframes pulse
	0% { transform: scale(0); }
	85% { opacity: 1; }
	100% { transform: scale(1); filter: blur(2px); opacity: 0; }