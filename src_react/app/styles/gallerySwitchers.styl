@import "constants"

switchSize = 24px
switchTileSize = 6px
switchTileMargin = 2px

#gallery-switchers
	width: containerWidthPct
	max-width: containerWidthPx
	height: switchSize
	margin: 16px auto
	
	& span
		position: relative
		top: 5px
		margin-right: 4px
		font-size: 12px
		color: colorGrayMedium
	
	& .gallery-switches
		position: relative
		top: 50%
		transform: translateY(-50%)
		display: inline-block
		float: right
		height: switchSize
		padding: 4px 8px
		background-color: colorGrayTinted
		border-radius: 4px

		
	& .gallery-switch
		position: relative
		vertical-align: top
		width: switchSize
		height: switchSize
		padding: 4px
		outline: none
		border: none
		background: none
		
		&:first-child
			margin-right: 8px
		
		&:hover
			transform: scale(1.1)
			cursor: pointer
			
	& .gallery-switch-wide
		width: 100%
		height: 100%
		background-color: colorGrayMedium	
	
	& .gallery-switch-tiles
		position: relative
		top: 1px
		width: 100%
		height: 100%
	
	& .gallery-switch-tile-row
		display: block
		height: switchTileSize
		margin-bottom: switchTileMargin
		
	& .gallery-switch-tile
		display: inline-block
		width: switchTileSize
		height: switchTileSize
		background-color: colorGrayMedium
		
		&:first-child
			margin-right: switchTileMargin