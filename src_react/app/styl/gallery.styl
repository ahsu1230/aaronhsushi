@import "constants"

#view-gallery
	position: relative

#gallery-content-container
	opacity: 0
	visibility: hidden
	transition: opacity 0.3s linear, visibility 0.3s linear

	&.show
		opacity: 1
		visibility: visible

	& p
		line-height: padding6x
		margin: padding2x
		font-family: fontFamilyOptima
		font-size: fontSizeNormal
		letter-spacing: 1px
		text-align: center

#gallery-load-container
	position: fixed
	top: 30%
	left: 50%
	transform: translate(-50%, 0)
	opacity: 0
	visibility: hidden
	transition: opacity 0.3s linear, visibility 0.3s linear

	&.show
		opacity: 1
		visibility: visible

	& .gallery-load-text
		text-align: center
		font-family: fontFamilyOptima
		font-size: 18px
		color: colorBlackDark

	& .gallery-load-pulser
		display: inline-block
		position: relative
		left: 50%
		transform: translate(-50%, 0)

	& .pulse
		display: inline-block
		width: 4px
		height: 4px
		margin: padding4x padding1x
		border-radius: 100%
		background-color: transparent
		border: 1px solid colorBlackDark
		animation-name: forward-pulse
		animation-duration: 1800ms
		animation-iteration-count: infinite
		animation-direction: forwards
		animation-timing-function: ease-out

		&.first
			animation-delay: 500ms
		&.second
			animation-delay: 620ms
		&.third
			animation-delay: 740ms
		&.fourth
			animation-delay: 860ms

@keyframes forward-pulse
	0% {
		opacity: 0.0
		transform: scale(1.0)
	}
	50% {
		opacity: 1.0
		transform: scale(1.1)
	}
	100% {
		opacity: 0.0
		transform: scale(1.0)
	}
