@import "constants"

bannerHeightPx = 400px
bannerHeightMiniPx = 320px

spacing1x = padding6x
spacing2x = padding12x

#view-about
  margin-top: 0

.about-banner-container
  position: relative
  width: 100%
  height: bannerHeightPx

  @media screen and (max-width: mediaScreenMaxWidth1)
    height: bannerHeightMiniPx

  &.art
    background: colorGrayLight url('./assets/covers/sushi_art.jpg') center/cover no-repeat
  &.boat
    background: colorGrayLight url('./assets/covers/sushi_boat_ice2.jpg') center/cover no-repeat
  &.bluefin1
    background: colorGrayLight url('./assets/covers/bluefin1.jpg') center/cover no-repeat
  &.bluefin2
    background: colorGrayLight url('./assets/covers/bluefin2.jpg') center/cover no-repeat
  &.bluefin3
    background: colorGrayLight url('./assets/covers/bluefin3.jpg') center/cover no-repeat

  & .banner-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(33, 33, 33, 0.3)

  & .banner-text-container
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: innerMaxWidthPct
    max-width: innerMaxWidthPx1
    height: 180px
    padding: padding4x padding8x

    & .banner-text
      position: relative
      top: 50%
      transform: translateY(-50%)
      margin: 0
      font-family: fontFamilyCormorant
      color: colorWhite
      text-align: left

    & p
      line-height: 40px
      margin: 0
      font-size: fontSizeLarge
      letter-spacing: 1.5px

      @media screen and (max-width: mediaScreenMaxWidth1)
        line-height: 32px
        font-size: fontSizeNormal

.about-text-container
  width: innerMaxWidthPct
  max-width: innerMaxWidthPx1
  margin: 80px auto

  @media screen and (max-width: mediaScreenMaxWidth1)
    margin: 40px auto

  & p
    line-height: 32px
    margin: 40px 0
    font-family: fontFamilyCormorant
    font-size: fontSizeNormal
    letter-spacing: 1px
    color: colorBlackDark

    @media screen and (max-width: mediaScreenMaxWidth1)
      line-height: 28px
      font-size: fontSizeSmall
