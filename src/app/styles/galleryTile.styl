@import "constants"

loaderSize = 12px

.gallery-tile
	position: relative
	width: 100%
	opacity: 1.0
	transition: 0.1s linear opacity

	&:hover
		cursor: pointer
		opacity: 0.9

	& img
		width: 100%
		vertical-align: middle;
		visibility: hidden
		opacity: 0.0
		transition: 0.5s linear opacity, 0.5s linear visibility

		&.loaded
			visibility: visible
			opacity: 1.0

	& .loader-container
		position: absolute
		top: "calc(50% - %s)" % (loaderSize / 2)
		left: "calc(50% - %s)" % (loaderSize / 2)
		transform: translate(-50%, -50%)
		display: block;
		width: loaderSize;
		height: loaderSize;
		border: 4px solid #fff;
		border-radius: 100%;
		animation: pulse 1s ease-in infinite;

		&.hide
			display: none

@keyframes pulse
	0% { transform: scale(0); }
	85% { opacity: 1; }
	100% { transform: scale(1); filter: blur(2px); opacity: 0; }
