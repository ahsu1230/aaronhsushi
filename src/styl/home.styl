@import "constants"

body
	font-family: 'Roboto', sans-serif;
	padding: 0
	margin: 0

#header
	width: 100%
	height: 80px
	margin-bottom: 40px
	background-color: colorPrimary

#header-container
	position: relative
	top: 50%
	transform: translateY(-50%)
	width: containerWidthPct
	max-width: containerWidthPx
	margin: 0px auto
	height: 50px

	& img
		height: 50px

#header-logo
	float: left
	height: 100%

#header-links
	float: right
	height: 100%

	& .header-link-container
		float: right
		margin-top: 12px
		margin-left: 16px
		font-size: 20px

		&:hover .header-link-underline
			visibility: visible
			opacity: 1.0

	& .header-link-underline
		margin-top: 4px
		border-bottom: 2px solid colorWhite
		visibility: invisible
		opacity: 0.0
		transition: 0.1s visibility linear, 0.1s opacity linear

	& a
		color: colorWhite
		text-decoration: none

#container
	width: containerWidthPct
	max-width: containerWidthPx
	margin: 0 auto
	border: 1px solid red