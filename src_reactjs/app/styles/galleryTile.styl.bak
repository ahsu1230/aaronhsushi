@import "constants"

loaderSize = 12px

.gallery-tile
	position: relative
	width: 100%
	margin-bottom: 12px
	opacity: 1.0
	transition: 0.1s linear opacity

	&:hover
		cursor: pointer
		opacity: 0.9

	& img
		width: 100%
		vertical-align: middle;

.ReactModalPortal
	opacity: 0.0
	visibility: hidden
	transition: 0.1s linear all

	& .fade
		opacity: 1.0
		visibility: visible